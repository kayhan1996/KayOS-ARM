{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "make rebuild",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make run",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "isBackground": true,
            "problemMatcher":{
                "pattern":[
                    {
                        "regexp": ".*",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern":{
                        "regexp": "qemu-system-aarch64*"
                    },
                    "endsPattern":{
                        "regexp": "-d*"
                    }
                }
            }
        }
    ]
}