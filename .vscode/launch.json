{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [        
        {
            "type": "gdb",
            "request": "attach",
            "name": "Attach to Remote",
            "gdbpath": "/usr/local/bin/aarch64-none-elf-gdb",
            "executable": "${workspaceRoot}/build/kernel.sym",
            "target": "192.168.1.100:9000",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "debugger_args": [
                "-enable-pretty-printing"
            ],
            "valuesFormatting": "prettyPrinters",
            "preLaunchTask": "remote run",
            "postDebugTask": "remote kill"
        },
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "miDebuggerPath": "/usr/local/bin/aarch64-none-elf-gdb",
            "targetArchitecture": "arm64",
            "program": "${workspaceRoot}/build/kernel.sym",
            "preLaunchTask": "remote run",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            {
                "text": "file ${workspaceRoot}/build/kernel.sym"
            },
            {
                "text": "target remote 192.168.1.100:9000"
            },
            {
                "text": "monitor reset init"
            }
                
            ],
            "osx": {
                "miDebuggerPath": "/usr/local/bin/aarch64-elf-gdb"
            }
        }
    ]
}