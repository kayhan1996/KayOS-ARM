{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenOCD JTAG",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/kernel8.elf",
            "preLaunchTask": "make",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "targetArchitecture": "arm64",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/local/bin/aarch64-none-elf-gdb",
            "launchCompleteCommand": "exec-continue",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "customLaunchSetupCommands": [
                {
                    "text": "set confirm off"
                },
                {
                    "text": "target remote 192.168.1.141:3333"
                },
                {
                    "text": "file ${workspaceRoot}/build/bin/kernel8.elf"
                },
                {
                    "text": "monitor reset halt",
                    "ignoreFailures": false
                },
                {
                    "text": "set remote hardware-breakpoint-limit 6",
                    "ignoreFailures": true
                },
                {
                    "text": "set remote hardware-watchpoint-limit 4",
                },
                {
                    "text": "load",
                },
                {
                    "text": "monitor step 0x80000",
                },
                {
                    "text": "stepi",
                    "ignoreFailures": true
                },
                {
                    "text": "hbreak kernel_main",
                },
                {
                    "text": "continue",
                    "ignoreFailures": true
                }
            ]
        },


        {
            "name": "Hardware Debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "miDebuggerPath": "/usr/local/bin/aarch64-none-elf-gdb",
            "targetArchitecture": "arm64",
            "program": "${workspaceRoot}/build/bin/kernel8.elf",
            "stopAtEntry": true,
            "launchCompleteCommand": "exec-run",
            "preLaunchTask": "make",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            {
                "text": "set confirm off"
            },
            {
                "text": "file ${workspaceRoot}/build/bin/kernel8.elf",
                "ignoreFailures": true
            },
            {
                "text": "target remote 192.168.1.141:3333",
                "ignoreFailures": true
            },
            {
                "text": "monitor reset halt",
                "ignoreFailures": true
            },
            {
                "text": "set remote hardware-breakpoint-limit 6",
                "ignoreFailures": true
            },
            {
                "text": "set remote hardware-watchpoint-limit 4",
                "ignoreFailures": true
            },
            {
                "text": "load",
                "ignoreFailures": true
            },
            {
                "text": "monitor step 0x80000",
                "ignoreFailures": true
            },
            {
                "text": "stepi",
                "ignoreFailures": true
            },
            {
                "text": "hbreak kernel_main",
                "ignoreFailures": true
            },
            {
                "text": "continue",
                "ignoreFailures": true
            }
                
            ],
            "osx": {
                "miDebuggerPath": "/usr/local/bin/aarch64-elf-gdb"
            }
        }
    ]
}